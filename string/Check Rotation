static boolean isRotation(String a, String b) {
    if (a.length() != b.length())
        return false;

    String temp = a + a;

    for (int i = 0; i <= temp.length() - b.length(); i++) {
        int j;
        for (j = 0; j < b.length(); j++) {
            if (temp.charAt(i + j) != b.charAt(j))
                break;
        }
        if (j == b.length())
            return true;
    }
    return false;
}
